<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>

        <item name="colorError">@color/ErrorColor</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorButtonNormal">@color/primaryDarkColor</item>

        <item name="colorControlHighlight">@color/secondaryLightColor</item>
        <item name="colorControlActivated">@color/secondaryDarkColor</item>
        <item name="actionMenuTextColor">@color/secondaryTextColor</item>

        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/secondaryLightColor</item>
        <item name="android:colorBackground">@color/backgroundColorLight</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>

        <item name="android:textColorPrimaryDisableOnly">@color/textDisabledColor</item>
        <item name="android:actionMenuTextAppearance">@style/BodyBold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TranslucentStatusBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:editTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="Display">
        <item name="android:textSize">@dimen/font_size_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Title" parent="Display">
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="TitleFancy" parent="Display">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="TitleDisabled" parent="Display">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TitleLight" parent="Display">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubHeading" parent="Title">
        <item name="android:textSize">@dimen/font_size_subheading</item>
    </style>

    <style name="SubHeadingLight" parent="Title">
        <item name="android:textSize">@dimen/font_size_subheading</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="SubHeadingInverse" parent="Title">
        <item name="android:textSize">@dimen/font_size_subheading</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


    <style name="BodyBold" parent="Body">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption" parent="Body">
        <item name="android:textSize">@dimen/font_size_caption</item>
    </style>

    <style name="CaptionItalic" parent="Caption">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.buttonBarButtonStyle">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="TagStyle">
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/backgroundColorLight</item>
    </style>

    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

