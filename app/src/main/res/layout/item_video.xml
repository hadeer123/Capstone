<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_film_cast_card_view_margin"
    app:contentPadding="@dimen/item_film_cast_card_view_padding">

    <FrameLayout
        android:id="@+id/layout_video_thumb"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/item_video_grid_layout_width"
        android:layout_height="@dimen/item_video_grid_layout_height"
        android:layout_margin="@dimen/item_video_grid_layout_margin">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/placeholder_image"
            android:src="@drawable/ic_empty_movies"/>

        <ImageView
            android:id="@+id/image_view_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/poster_image"
            android:foreground="?selectableItemBackground"
            android:maxHeight="150dp"
            android:scaleType="centerCrop"/>
    </FrameLayout>
</android.support.v7.widget.CardView>
